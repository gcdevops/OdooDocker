<?xml version="1.0" encoding="UTF-8"?>


<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.helpdesk_lite</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="emails" position="after">
                <h2>Helpdesk</h2>
                <div class="row o_settings_container" id="helpdesk_lite">
                    <div class="col o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label"> Admin Email </span>
                            <div class="text-muted">
                                Configure the email from which ticket notifications will be sent
                            </div>
                            <div class="content-group">
                                <div class="row mt16" id="helpdesk_email">
                                    <field name="administration_email" placeholder="you@example.com"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>