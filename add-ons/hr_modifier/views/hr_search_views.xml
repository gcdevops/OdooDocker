<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_search_employee_form" model="ir.ui.view">
            <field name="name">hr.employee.search.form</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <form string="Search">
                <sheet>
                    <group> 
                        <field name="name"  placeholder="e.g. "/>
                    </group>
                </sheet>    
                </form>
            </field>
        </record>

        <record id="action_hr_search" model="ir.actions.act_window">
            <field name="name">Search</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_region_filter"/>
            <field name="help" type="xml">
              
            </field>
        </record>

    </data>
</odoo>