<?xml version="1.0" encoding="UTF-8"?>

<template xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="replace">
            <t t-if="widget.modelName == 'hr.employee'">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    <i class="fa fa-plus"/>
                    Add Employee
                </button>
            </t>
            <t t-if="widget.modelName == 'res.partner'">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    <i class="fa fa-plus"/>
                    Add Location
                </button>
            </t>
            <t t-if="widget.modelName == 'hr.job'">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    <i class="fa fa-plus"/>
                    Add Job Position
                </button>
            </t>
            <t t-if="widget.modelName == 'hr.department'">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    <i class="fa fa-plus"/>
                    Add Team
                </button>
            </t>
            <t t-if="widget.modelName == 'hr.classification'">
                <button type="button" class="btn btn-primary o_list_button_add" accesskey="c">
                    <i class="fa fa-plus"/>
                    Add Classification
                </button>
            </t>
        </t>
    </t>
</template>